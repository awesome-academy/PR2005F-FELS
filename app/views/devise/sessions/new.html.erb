<body style="background-color: #F5F5F5">
 <div id="logreg-forms">
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <h1 class="h3 mb-3 font-weight-normal" style="text-align: center"> Sign in</h1>
 <%= render "devise/shared/socials" %> </center> 
  <p style="text-align:center"> OR  </p>
    <%= f.email_field :email, placeholder: "Email Address", class: "form-control", autofocus: true, autocomplete: "email" %>
    <%= f.password_field :password, placeholder: "Password", class: "form-control", autocomplete: "current-password" %>
  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-success btn-block" %>
    <%= render "devise/shared/links" %>
  </div>
<% end %>
</div>
</body>
